<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_StackLayout_ExemploPratico.MainPage">
  <ContentPage.Content>
    <StackLayout>
      <BoxView x:Name="Caixa" HeightRequest="100"/>
      <Slider x:Name="SliderR" Minimum="0" Maximum="1" ValueChanged="Slider_OnValueChanged"/>
      <Slider x:Name="SliderG" Minimum="0" Maximum="1" ValueChanged="Slider_OnValueChanged"/>
      <Slider x:Name="SliderB" Minimum="0" Maximum="1" ValueChanged="Slider_OnValueChanged"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>