<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_ListView7.MainPage">
  <ContentPage.Content>
    <StackLayout>
      <ListView x:Name="MyListView" ItemSelected="MyListView_OnItemSelected">
          <ListView.ItemTemplate>
              <DataTemplate>
                  <TextCell Text="{Binding InformacaoPrincipal}"/>
              </DataTemplate>
          </ListView.ItemTemplate>
      </ListView>
      <Button Text="Adicionar" Clicked="Button_OnClicked"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>