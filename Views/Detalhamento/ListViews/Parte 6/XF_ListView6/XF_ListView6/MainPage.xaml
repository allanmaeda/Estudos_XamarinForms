<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_ListView6.MainPage">
  <ContentPage.Content>
    <ListView x:Name="MyListView" IsPullToRefreshEnabled="True" Refreshing="MyListView_OnRefreshing">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Conteudo}" Detail="{Binding Hora}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </ContentPage.Content>
</ContentPage>