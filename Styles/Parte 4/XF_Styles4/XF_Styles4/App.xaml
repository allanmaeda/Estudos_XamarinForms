<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_Styles4.App">
	<Application.Resources>
        <ResourceDictionary>
            <Style x:Key="Base" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>
            <Style x:Key="Derivado1" TargetType="Label" BasedOn="{StaticResource Base}">
                <Setter Property="TextColor" Value="DarkCyan" />
            </Style>
            <Style x:Key="Derivado2" TargetType="Label" BasedOn="{StaticResource Base}">
                <Setter Property="TextColor" Value="DarkOrange" />
            </Style>
        </ResourceDictionary>
	</Application.Resources>
</Application>