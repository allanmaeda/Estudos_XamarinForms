<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_TabbedPage3.TabPage">

    <ContentPage Title="Parte 1">
        <Label VerticalOptions="Center" 
               HorizontalOptions="Center" 
               Text="Esta é a Parte 1"/>
    </ContentPage>

    <ContentPage Title="Parte 2">
        <Label VerticalOptions="Center" 
               HorizontalOptions="Center" 
               Text="Esta é a Parte 2"/>
    </ContentPage>

    <ContentPage Title="Parte 3">
        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Label Text="Esta é a Parte 3"/>
            <Button Text="Clique aqui" Clicked="Button_OnClicked"/>
        </StackLayout>
    </ContentPage>

</TabbedPage>