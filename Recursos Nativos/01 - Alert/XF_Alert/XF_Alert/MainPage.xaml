<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_Alert.MainPage">
  <ContentPage.Content>
    <StackLayout>
      <StackLayout VerticalOptions="CenterAndExpand">
        <Button Text="Exibir Alert com um botão" Clicked="Button_AlertSimples" />
      </StackLayout>
      <StackLayout VerticalOptions="CenterAndExpand">
        <Button Text="Exibir Alert com dois botões" Clicked="Button_AlertComplexo"/>
        <Label x:Name="Label" />
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>

</ContentPage>